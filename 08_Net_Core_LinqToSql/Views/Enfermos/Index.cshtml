@model List<Enfermo>

<h1>Vista de enfermos</h1>

<form method="post">
    <label>Buscar por feha de nacimiento</label>
    <input type="date" name="fechNacimiento"/>

    <button type="submit" class="btn btn-info">Buscar</button>
</form>

<h2>@ViewData["MENSAJEFECHA"]</h2>

@if (Model != null)
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Inscripcion</th>
                <th>Apellido</th>
                <th>Direccion</th>
                <th>Fecha Nacimiento</th>
                <th>Sexo</th>
                <th>Num SS</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (Enfermo enf in Model)
            {
                <tr>
                    <td>@enf.Inscripcion</td>
                    <td>@enf.Apellido</td>
                    <td>@enf.Direccion</td>
                    <td>@enf.FechNacimiento</td>
                    <td>@enf.Sexo</td>
                    <td>@enf.NumSS</td>
                    <td>
                        <a asp-controller="Enfermos" asp-action="Delete" asp-route-inscripcion="@enf.Inscripcion" class="btn btn-danger">Eliminar</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
