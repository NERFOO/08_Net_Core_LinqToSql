@model List<Empleado>

<h1>buscador empleado</h1>

<form method="post">

    <label>Oficio: </label>
    <input type="text" name="oficio" class="form-control" />

    <label>Salario: </label>
    <input type="number" name="salario" class="form-control" />

    <button type="submit" class="btn btn-success">Buscar empleado</button>
</form>

<h2 style="color: red">@ViewData["MENSAJE"]</h2>

@if (Model != null)
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Apellido</th>
                <th>Oficio</th>
                <th>Salario</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (Empleado emp in Model)
            {
                <tr>
                    <td>@emp.Apellido</td>
                    <td>@emp.Oficio</td>
                    <td>@emp.Salario</td>
                </tr>
            }
        </tbody>
    </table>
}
